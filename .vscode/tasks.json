{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "document",
      "type": "process",
      "command": "dotnet",
      "args": [
        "script",
        "./Scripts/Document.csx",
        "${workspaceFolder}/Dbarone.Net.Fake/bin/Debug/net6.0/Dbarone.Net.Fake.xml",
        "${workspaceFolder}/Documentation.md"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["build"]
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Dbarone.Net.Fake.Tests/Dbarone.Net.Fake.Tests.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Dbarone.Net.Fake.Tests/Dbarone.Net.Fake.Tests.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Dbarone.Net.Fake.Tests/Dbarone.Net.Fake.Tests.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build and Document",
      "dependsOn": ["document", "build"],
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
